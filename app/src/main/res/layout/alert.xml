<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="9dp"
    android:orientation="vertical">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/gelas"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:src="@drawable/gelas" />

            <ImageView
                android:id="@+id/aqua"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:src="@drawable/aquagelas" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">

            <ImageView
                android:id="@+id/botolkecil"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:src="@drawable/botolkecil" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="5"
                android:id="@+id/botobsar"
                android:src="@drawable/aquabotol"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_marginTop="3dp"
            android:text="Sudah Minum Berapa Gelas Anda Kali Ini ?"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="horizontal">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="45dp"
                android:textSize="35dp"
                android:textColor="@color/white"
                android:layout_marginRight="9dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:src="@drawable/min"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_shape"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="9dp"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"/>
            <android.support.design.widget.FloatingActionButton
                android:layout_width="50dp"
                android:src="@drawable/add"
                android:textColor="@color/white"
                android:textSize="35dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_shape"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>